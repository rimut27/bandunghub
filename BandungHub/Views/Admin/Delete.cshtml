@model BandungHub.Models.Departemen

@{
    ViewData["Title"] = "Delete Departemen";
}

<div class="container">

<h1>Delete Departemen</h1>

<h3>Are you sure you want to delete this?</h3>
<div>
    <h4>Departemen</h4>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">Nama</dt>
        <dd class="col-sm-10">@Model.Nama</dd>

        <dt class="col-sm-2">Link</dt>
        <dd class="col-sm-10">@Model.Link</dd>

        <dt class="col-sm-2">Icon</dt>
        <dd class="col-sm-10">@Model.Icon</dd>
    </dl>
</div>
<form asp-action="Delete">
    <input type="hidden" asp-for="Id" />
    <button type="submit" class="btn btn-danger">Hapus</button>
    <a asp-action="Index" class="btn btn-secondary">Batal</a>
</form>
</div>