@model IEnumerable<BandungHub.Models.Departemen>
@{
    ViewData["Title"] = "Home Page";
}

<div class="mb-lg-3 mt-4" style="
     background-image: url('assets/background.png');
     background-repeat: no-repeat;
     background-size: cover;
     background-position: center;
">
    <div class="row">
        <div class="col-md-7">
            <div class="card">
                <div>
                    <div class="row ">
                        <div class="col">
                            <div class="card">
                                <div class="card-body">
                                    <div id="carouselExampleControls" class="carousel slide transparent-carousel" data-ride="carousel">
                                        <div class="carousel-inner">
                                            <div class="carousel-item active">
                                                <img src="~/assets/5S PROCESS.jpg" class="d-block w-100" alt="5S Process">
                                            </div>
                                            <div class="carousel-item">
                                                <img src="~/assets/QUALITY CARDINAL RULE.jpg" class="d-block w-100" alt="Quality Cardinal Rule">
                                            </div>
                                            <div class="carousel-item">
                                                <img src="~/assets/SAFESTART.jpg" class="d-block w-100" alt="Safestart">
                                            </div>
                                        </div>
                                        <button class="carousel-control-prev" type="button" data-target="#carouselExampleControls" data-slide="prev">
                                        </button>
                                        <button class="carousel-control-next" type="button" data-target="#carouselExampleControls" data-slide="next">
                                        </button>

                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>

        <div class="col-md-5">
            <div class="row" style="display: flex; justify-content: center; align-items: center;  background-color: white;">
         
                <div class="col-md-4">
                    <h2 style="font-weight: bold; color: maroon;  border-radius: 10px; border: 3px solid maroon ">
                        <center> QUICK LINK </center>
                    </h2>
                </div>
            </div>

           @if (Model != null && Model.Any())
            {
                <div class="row mt-3">
                    @foreach (var item in Model.Select((value, index) => new { value, index }))
                    {

                        <div class="col-md-4 mb-3 ">
                            <div class="card" style="background-color: #fafafa; border-radius: 15px; border: 2px solid maroon; ">
                                <div class="card-body text-center">
                                    <a href="@item.value.Link" class="flex-grow-1 text-center" style="text-decoration: none;">
                                        <img src="@item.value.Icon" alt="Icon" class="img-thumbnail" style="height: 80px; width:80px" />
                                        <p class="card-title" style="color: black;">@item.value.Nama</p>
                                    </a>
                                </div>
                                </div>
                            </div>
                    }
                </div>
            }
            else
            {
                <p>Not Found Data.</p>
            }

        </div>
    </div>
</div>



<!-- Bootstrap CSS -->
<link href="https://stackpath.bootstrapcdn.com/bootstrap/4.5.2/css/bootstrap.min.css" rel="stylesheet">

<!-- jQuery (Bootstrap 4 depends on jQuery) -->
<script src="https://code.jquery.com/jquery-3.6.0.min.js"></script>

<!-- Popper.js (for Bootstrap 4) -->
<script src="https://cdnjs.cloudflare.com/ajax/libs/popper.js/1.16.1/umd/popper.min.js"></script>

<!-- Bootstrap JS -->
<script src="https://stackpath.bootstrapcdn.com/bootstrap/4.5.2/js/bootstrap.min.js"></script>
